        android:theme="@style/AppTheme" >
        <!--
            主题theme的玩法：http://www.cnblogs.com/zhouyou96/p/5323138.html
        -->

        <!--四大基本组件：Activity, ContentProvider, Service, BroadcastReceiver-->
        <!--组件必须在Manifest.xml文件中说明-->
        <activity android:name=".MainActivity" android:label="@string/title_activity_main" >
            <intent-filter>
                <!--应用程序的入口点-->
                <action android:name="android.intent.action.MAIN" />
                <!--启动项 决定应用程序是否显示在程序列表里-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MessageShow.ToastDemoActivity" android:label="@string/title_activity_toast" />
        <activity android:name=".ControlUI.ControlUI" android:label="@string/title_activity_control_ui" />
