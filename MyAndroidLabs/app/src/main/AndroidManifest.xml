        <activity android:name=".ControlUI.CodeUI" android:label="@string/title_activity_code_ui" />
        <activity android:name=".LayoutMgr.LayoutMgr" android:label="@string/title_activity_layout_mgr" />
        <activity android:name=".BasicComponent.BasicComponent" android:label="@string/title_activity_basic_component" />
        <activity android:name=".NotificationActivity" android:label="@string/title_activity_notification" />
        <activity android:name=".AlertDialogActivity" android:label="@string/title_activity_alert_dialog" />
        <activity android:name=".ButtonEventDemoActivity" android:label="Button Event Demo" />
        <activity android:name=".LoginUI.LoginBasicLayout" android:label="Login Basic Layout" />

        <activity android:name=".ImageDemoActivity" android:label="Image Demo" />
